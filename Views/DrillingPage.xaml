<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MechTools.Models"
             x:Class="MechTools.Views.DrillingPage"
             Title="Prefori ðŸ”©"
             BackgroundColor="#121212">

    <Grid RowDefinitions="Auto, Auto, *" RowSpacing="15" Padding="15">

        <Label Grid.Row="0" Text="PREFORI MASCHIATURA" 
               TextColor="White" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center"/>

        <Grid Grid.Row="1" ColumnDefinitions="*,*" ColumnSpacing="10">
            <Button Grid.Column="0" Text="Standard" Command="{Binding LoadStandardCommand}"
                    BackgroundColor="#FF9900" TextColor="Black" FontAttributes="Bold"/>
            <Button Grid.Column="1" Text="Passo Fine" Command="{Binding LoadFineCommand}"
                    BackgroundColor="#007ACC" TextColor="White" FontAttributes="Bold"/>
        </Grid>

        <CollectionView Grid.Row="2" ItemsSource="{Binding ThreadList}">
            <CollectionView.Header>
                <Label Text="{Binding CurrentFilterName}" TextColor="Gray" HorizontalOptions="Center" Margin="0,0,0,10"/>
            </CollectionView.Header>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:ThreadItem">
                    <Border StrokeThickness="0" BackgroundColor="#1E1E1E" Margin="0,5" Padding="15">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>

                        <Grid ColumnDefinitions="Auto, *, Auto" RowDefinitions="Auto, Auto">

                            <Label Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" 
                                   Text="{Binding Name}" 
                                   FontSize="28" FontAttributes="Bold" TextColor="White"
                                   VerticalOptions="Center" WidthRequest="100"/>

                            <Label Grid.Row="0" Grid.Column="1" Text="Passo" TextColor="Gray" FontSize="12"/>
                            <Label Grid.Row="1" Grid.Column="1" Text="{Binding Pitch, StringFormat='{0} mm'}" TextColor="#AAAAAA" FontAttributes="Bold"/>

                            <VerticalStackLayout Grid.Row="0" Grid.RowSpan="2" Grid.Column="2" HorizontalOptions="End">
                                <Label Text="PUNTA Ã˜" TextColor="{Binding TypeColor}" FontSize="12" HorizontalOptions="End"/>
                                <Label Text="{Binding DrillMm, StringFormat='{0} mm'}" 
                                       TextColor="{Binding TypeColor}" 
                                       FontSize="28" FontAttributes="Bold" HorizontalOptions="End"/>
                            </VerticalStackLayout>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>