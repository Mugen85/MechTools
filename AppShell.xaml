<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MechTools.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MechTools.Views"
    Title="MechTools"
    BackgroundColor="#1E1E1E"
    ForegroundColor="White"
    TitleColor="White"
    FlyoutBackgroundColor="#1E1E1E">

    <Shell.FlyoutHeader>
        <VerticalStackLayout BackgroundColor="#2D2D2D" Padding="20" Spacing="10">
            <Image Source="appicon.png" HeightRequest="80" HorizontalOptions="Center"/>
            <Label Text="MECH TOOLS" TextColor="#FF9900" FontAttributes="Bold" HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Home Dashboard" Icon="appicon.png">
        <ShellContent ContentTemplate="{DataTemplate views:DashboardPage}" Route="DashboardPage" />
    </FlyoutItem>

    <FlyoutItem Title="Chiavi e Bulloni" Icon="appicon.png">
        <ShellContent ContentTemplate="{DataTemplate views:KeysPage}" Route="KeysPage" />
    </FlyoutItem>

    <FlyoutItem Title="Raccordi Idraulici" Icon="appicon.png">
        <ShellContent ContentTemplate="{DataTemplate views:FittingsPage}" Route="FittingsPage" />
    </FlyoutItem>

    <FlyoutItem Title="Prefori Maschiatura" Icon="appicon.png">
        <ShellContent ContentTemplate="{DataTemplate views:DrillingPage}" Route="DrillingPage" />
    </FlyoutItem>

    <FlyoutItem Title="Coppie di Serraggio" Icon="appicon.png">
        <ShellContent ContentTemplate="{DataTemplate views:TorquePage}" Route="TorquePage" />
    </FlyoutItem>

    <FlyoutItem Title="Calcolo VelocitÃ " Icon="appicon.png">
        <ShellContent ContentTemplate="{DataTemplate views:RpmPage}" Route="RpmPage" />
    </FlyoutItem>

    <FlyoutItem Title="Convertitore" Icon="appicon.png">
        <ShellContent ContentTemplate="{DataTemplate views:ConvertersPage}" Route="ConvertersPage" />
    </FlyoutItem>

</Shell>